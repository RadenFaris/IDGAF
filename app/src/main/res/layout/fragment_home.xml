<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeActivity">

    <ImageView
        android:id="@+id/hiasan_home_orange_square"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hiasan_home_orange" />

    <com.capstoneproject.aplikasiantifoodwaste.custom.CustomEditTextSearch
        android:id="@+id/et_search_home"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        android:hint="@string/cari_makanan"
        app:layout_constraintEnd_toStartOf="@+id/iv_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_search"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_search_home"
        app:layout_constraintEnd_toEndOf="@+id/et_search_home"
        app:layout_constraintTop_toTopOf="@+id/et_search_home"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/welcome_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search_home" />

    <ImageView
        android:id="@+id/iv_hiasan_home_white_square"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/hiasan_home_putih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_home" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_home">
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_scan"
        app:layout_constraintStart_toStartOf="@+id/iv_hiasan_home_white_square"
        app:layout_constraintTop_toTopOf="@+id/iv_hiasan_home_white_square" />

    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/scan"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/iv_hiasan_home_white_square"
        app:layout_constraintTop_toBottomOf="@+id/iv_scan" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/ic_share"
        app:layout_constraintStart_toEndOf="@+id/iv_scan"
        app:layout_constraintTop_toTopOf="@+id/iv_hiasan_home_white_square" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/share"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_share"
        app:layout_constraintStart_toStartOf="@+id/iv_share"
        app:layout_constraintTop_toBottomOf="@+id/iv_share" />

    <ImageView
        android:id="@+id/iv_tips"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/ic_tips"
        app:layout_constraintEnd_toStartOf="@id/iv_makanan_dibagikan"
        app:layout_constraintTop_toTopOf="@+id/iv_hiasan_home_white_square" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/tips"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_tips"
        app:layout_constraintStart_toStartOf="@+id/iv_tips"
        app:layout_constraintTop_toBottomOf="@+id/iv_tips" />

    <ImageView
        android:id="@+id/iv_makanan_dibagikan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ic_food_bank"
        app:layout_constraintEnd_toEndOf="@+id/iv_hiasan_home_white_square"
        app:layout_constraintTop_toTopOf="@+id/iv_hiasan_home_white_square" />

    <TextView
        android:id="@+id/tv_makanan_dibagikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="MyShare"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_hiasan_home_white_square"
        app:layout_constraintStart_toStartOf="@+id/iv_makanan_dibagikan"
        app:layout_constraintTop_toBottomOf="@+id/iv_tips" />

    <TextView
        android:id="@+id/tv_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/storage"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_hiasan_home_white_square" />

    <Button
        android:id="@+id/btn_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/see_all"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:backgroundTint="@color/purple"
        android:minHeight="0dp"
        android:minWidth="0dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_rv"
        app:layout_constraintEnd_toEndOf="parent" />

