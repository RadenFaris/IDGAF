<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tips.artikel.ArtikelApelSangatSegarDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_gambar_detail_artikel_apel_sangat_segar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_judul_detail_artikel_apel_sangat_segar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Judul Artikel"
            android:layout_marginTop="175dp"/>

        <TextView
            android:id="@+id/tv_deskripsi_detail_artikel_apel_sangat_segar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Deskripsi Artikel"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/tv_sumber_detail_artikel_apel_sangat_segar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sumber Artikel"
            android:layout_marginTop="325dp"/>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>